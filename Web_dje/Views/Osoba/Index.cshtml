@model IEnumerable<Web_dje.Models.OSOBA>

@{
    ViewBag.Title = "Index";
}

<h2>Pregled osoba</h2>
@using (Html.BeginForm())
{
<p>
    @Html.ActionLink("Nova osoba", "Create")


    <div class="input-group">
        <span class="input-group-btn">
            @Html.TextBox("SearchString", null, new { @class = "form-control" })
            <button class="btn btn-default" type="submit">Pretraži</button>
        </span>
    </div>

</p>
}
<table class="table table-striped table-inverse">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OIB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PREZIME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ID_OSOBA)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OIB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PREZIME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ID_OSOBA)
        </td>
        <td>
            @Html.ActionLink("Uredi", "Edit", new { id=item.OIB }) |
            @Html.ActionLink("Detalji", "Details", new { id=item.OIB }) |
            @Html.ActionLink("Izbriši", "Delete", new { id=item.OIB })
        </td>
    </tr>
}

</table>
